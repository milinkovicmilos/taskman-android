<?xml version="1.0" encoding="UTF-8"?>
<?xaml-comp compile="true" ?>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="Label" x:Key="TitleLabelStyle">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
    </Style>

    <Style TargetType="Label" x:Key="InputLabelStyle">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
    </Style>

    <Style TargetType="Label" x:Key="ErrorLabelStyle">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource AccentColor}" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <Style TargetType="Label" x:Key="ProjectTitleStyle">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
    </Style>

    <Style TargetType="Label" x:Key="ProjectDescriptionStyle">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource SecondaryTextColor}" />
    </Style>

    <Style TargetType="Button" x:Key="PrimaryButtonStyle">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="BorderColor" Value="{StaticResource BorderSecondaryColor}" />
        <Setter Property="BorderWidth" Value="1" />
    </Style>

    <Style TargetType="Button" x:Key="SecondaryButtonStyle">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="BackgroundColor" Value="{StaticResource BorderColor}" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="BorderColor" Value="{StaticResource BorderSecondaryColor}" />
        <Setter Property="BorderWidth" Value="1" />
    </Style>

    <Style TargetType="Entry" x:Key="InputControlStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackgroundColor}" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource SecondaryTextColor}" />
    </Style>

    <Style TargetType="Border" x:Key="DefaultBorderStyle">
        <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Rectangle RadiusX="5" />
        </Setter>
    </Style>

    <Style TargetType="Border" x:Key="CardStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackgroundColor}" />
        <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Rectangle RadiusX="5" />
        </Setter>
    </Style>

    <Style TargetType="Border" x:Key="LoadingStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackgroundColor}" />
        <Setter Property="Opacity" Value="0.9" />
    </Style>

</ResourceDictionary>