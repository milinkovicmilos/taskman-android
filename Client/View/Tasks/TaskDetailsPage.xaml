<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Client.ViewModel.Tasks"
             xmlns:local="clr-namespace:Client.View.Tasks"
             x:DataType="viewmodel:TaskDetailsViewModel"
             x:Class="Client.View.Tasks.TaskDetailsPage"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ContentPage.Content>
        <Grid ColumnDefinitions="*"
              RowDefinitions="Auto,*,Auto">
            <local:TaskDetailsView BindingContext="{Binding Task}"
                                   Margin="20"
                                   Grid.Row="0" />
            <Border Style="{StaticResource LoadingStyle}"
                    IsVisible="{Binding IsBusy}"
                    Grid.ColumnSpan="1"
                    Grid.RowSpan="3">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   Color="{StaticResource AccentColor}"
                                   Scale="0.5" />
            </Border>
        </Grid>
    </ContentPage.Content>
</ContentPage>