<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Client.ViewModel"
             x:Class="Client.View.LoginPage"
             x:DataType="viewmodel:LoginViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ContentPage.Content>
        <ScrollView>
            <Grid ColumnDefinitions="*"
                  RowDefinitions="*">
                <VerticalStackLayout
                    Spacing="20"
                    Margin="20"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email:" Style="{StaticResource InputLabelStyle}"></Label>
                        <Border Style="{StaticResource DefaultBorderStyle}">
                            <Entry Placeholder="Enter Email..."
                                   Style="{StaticResource InputControlStyle}"
                                   Keyboard="Email"
                                   Text="{Binding Email}" />
                        </Border>
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="5" MinimumWidthRequest="250">
                        <Label Text="Password:" Style="{StaticResource InputLabelStyle}"></Label>
                        <Border Style="{StaticResource DefaultBorderStyle}">
                            <Entry Placeholder="Enter Password..."
                                   Style="{StaticResource InputControlStyle}"
                                   IsPassword="True"
                                   Text="{Binding Password}" />
                        </Border>
                    </VerticalStackLayout>
                    <Label Text="{Binding ErrorMessage}"
                           Style="{StaticResource ErrorLabelStyle}" />
                    <Button Text="Login" Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding LoginCommand}" />
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>