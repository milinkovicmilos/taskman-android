<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Client.ViewModel"
             x:Class="Client.View.Projects.ProjectDetailsPage"
             x:DataType="viewmodel:ProjectDetailsViewModel"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ContentPage.Content>
        <ScrollView>
            <Grid ColumnDefinitions="*"
                  RowDefinitions="Auto,*">
                <Border Style="{StaticResource CardStyle}"
                        Padding="20"
                        Margin="20"
                        Grid.Row="0">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}"
                               Style="{StaticResource ProjectTitleStyle}"
                               FontSize="20" />
                        <Label Text="{Binding Description}"
                               Style="{StaticResource ProjectDescriptionStyle}" />
                        <FlexLayout JustifyContent="SpaceBetween"
                                    Margin="0,20,0,0">
                            <Button Text="Edit"
                                    Command="{Binding GoToEditPageCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    FontSize="14" />
                            <Button Text="Delete"
                                    Command="{Binding DeleteProjectCommand}"
                                    Style="{StaticResource DeleteButtonStyle}"
                                    FontSize="14" />
                        </FlexLayout>
                    </VerticalStackLayout>
                </Border>
                <Border Style="{StaticResource LoadingStyle}"
                        IsVisible="{Binding IsBusy}"
                        Grid.ColumnSpan="1"
                        Grid.RowSpan="2">
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       Color="{StaticResource AccentColor}"
                                       Scale="0.5" />
                </Border>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>