<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Client.ViewModel"
             x:DataType="viewmodel:EditProjectViewModel"
             x:Class="Client.View.Projects.EditProjectPage"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ContentPage.Content>
        <ScrollView>
            <Grid ColumnDefinitions="*"
                  RowDefinitions="*">
                <VerticalStackLayout Spacing="20"
                                     Margin="20"
                                     WidthRequest="250"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Project Name:"
                               Style="{StaticResource InputLabelStyle}">
                        </Label>
                        <Border Style="{StaticResource DefaultBorderStyle}">
                            <Entry Placeholder="Name..."
                                   Style="{StaticResource InputControlStyle}"
                                   Text="{Binding Name}" />
                        </Border>
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Project Description:"
                               Style="{StaticResource InputLabelStyle}">
                        </Label>
                        <Border Style="{StaticResource DefaultBorderStyle}">
                            <Entry Placeholder="Description..."
                                   Style="{StaticResource InputControlStyle}"
                                   Text="{Binding Description}" />
                        </Border>
                    </VerticalStackLayout>
                    <Label Text="{Binding ErrorMessage}"
                           Style="{StaticResource ErrorLabelStyle}" />
                    <Button Text="Submit"
                            Command="{Binding UpdateProjectCommand}"
                            Style="{StaticResource PrimaryButtonStyle}" />
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>